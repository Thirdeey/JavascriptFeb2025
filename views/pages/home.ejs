<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body
    class="bg-gradient-to-br from-black via-gray-900 to-blue-900 text-gray-200 min-h-screen items-center">
    <div class="container mx-auto p-5">
        <h1 class="text-4xl font-bold text-center mb-5 text-yellow-400 drop-shadow-lg">Pok√©dex</h1>

        <!-- üîç Search Form -->
        <form action="/search" method="GET" class="flex justify-center mb-5">
            <input type="text" name="name" placeholder="Search Pok√©mon..."
                class="px-4 py-2 border border-yellow-500 bg-gray-800 text-white rounded-l-lg focus:outline-none focus:ring-2 focus:ring-yellow-400">
            <button type="submit"
                class="bg-yellow-500 text-black font-bold px-4 py-2 rounded-r-lg hover:bg-yellow-600 transition">
                Search
            </button>
        </form>

        <!-- Pok√©mon List -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% pokemonList.forEach(pokemon=> { %>
                <a href="/pokemon/<%= pokemon.name %>"
                    class="p-4 bg-gray-800 shadow-lg rounded-lg text-center hover:shadow-2xl transition transform hover:scale-105 border border-gray-700">
                    <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" class="w-24 h-24 mx-auto mb-2 drop-shadow-md">
                    <p class="text-xl capitalize font-semibold text-yellow-300 drop-shadow-md">
                        <%= pokemon.name %>
                    </p>
                </a>
                <% }); %>
        </div>
    </div>
    <%- include("../partials/footer") %>
</body>

</html>